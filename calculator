def calculator():
    def sum(a,b):
        return a+b;
    def sub(a,b):
        return a-b;
    def mult(a,b):
        return a*b;
    def div(a,b):
        return a/b;
    flag=1  
    while (flag):
        menu=int(input("Enter choice\n1.Addition\n2.Subtraction\n3.Multiplication\n4.Division\n5.Exit\n"))

        if menu==1:
            a=float(input("Enter the first number: "))
            b=float(input("Enter the second number: "))
            print("Sum is ",sum(a,b))
        elif menu==2:
            a=float(input("Enter the first number: "))
            b=float(input("Enter the second number: "))
            print("Difference is ",sub(a,b))
        elif menu==3:
            a=float(input("Enter the first number: "))
            b=float(input("Enter the second number: "))
            print("Product is ",mult(a,b))
        elif menu==4:
            a=float(input("Enter the first number: "))
            b=float(input("Enter the second number: "))
            print("Quotient is ",div(a,b))
        elif menu==5:
            flag=0
            
calculator()
